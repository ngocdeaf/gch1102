<style>
    .center-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }

    body {
        background-color: #f7f5eb;
        padding-top: 70px;
        padding-bottom: 30px;
    }

    .navbar-custom {
        background-color: #fdcc69;
    }
</style>

<nav class="navbar navbar-expand-lg navbar-light fixed-top navbar-custom">
    <div class="container">
        <a class="navbar-brand" href="/"><span>The Toy</span>Box</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" style="padding-right: 30px;" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/toy/">Toy</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/game">Game</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="center-form">
    <form class="bg-light text-center col-md-8" action="/game/edit/{{game._id}}" method="post">
        <div>
            <h1 class="text text-primary">Edit Game</h1>
        </div>
        <div class="form-group mt-3">
            <label class="text text-success">Name</label>
            <input class="form-control" type="text" name="name" value="{{ game.name }}" required>
        </div>
        <div class="form-group mt-3">
            <label class="text text-success">Category</label>
            <select class="form-control" name="category">
                <option value="{{ game.category }}" selected>{{ game.category }}</option>
                <option value="RPG">RPG</option>
                <option value="Puzzle">Puzzle</option>
                <option value="Simulation">Simulation</option>
                <option value="Sport">Sport</option>
                <option value="FPS">FPS</option>
            </select>
        </div>
        <div class="form-group mt-3">
            <label class="text text-success">Quantity</label>
            <input class="form-control" type="number" name="quantity" value="{{ game.quantity }}" required>
        </div>
        <div class="form-group mt-3">
            <label class="text text-success">Price</label>
            <input class="form-control" type="number" name="price" value="{{ game.price }}" required>
        </div>
        <div class="form-group mt-3">
            <label class="text text-success">Date</label>
            <input class="form-control" type="date" name="date" value="{{ game.date }}" required>
        </div>

        <div class="form-group mt-3">
            <label class="text text-success">Image</label><br>
            <img src="{{ game.image }}" width="300"><br>
            <input class="form-control" type="text" name="image" value="{{ game.image }}" required>
        </div>
        <div class="form-group mt-3">
            <a class="btn btn-secondary" href="/game"
                onclick="return confirm('Unsaved Information will be lost!');">Cancel</a>
            </a>
            <input class="btn btn-danger" type="submit" value="Edit">
        </div>
</div>
</form>