<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

<style>
    body {
        background-color: #f7f5eb;
        padding-top: 70px;
    }

    .navbar-custom {
        background-color: #fdcc69;
    }
    
</style>

<nav class="navbar navbar-expand-lg navbar-light fixed-top navbar-custom">
    <div class="container">
        <a class="navbar-brand" href="/"><span>The Toy</span>Box</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" style="padding-right: 30px;" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/toy">Toy</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/game">Game</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container text-center mt-3 mb-3 col-md-10">
    <table class="table table-success">
        <tr>
            <th class="h1 text text-danger" colspan="12">GAMES LIST</th>
        </tr>
        <tr>
            <th colspan="3">
                <form action="/game/search" method="post">
                    <input class="form-control" type="search" name="keyword" placeholder="Search By Name">
                </form>
            </th>
            <th colspan="3">
                <a class="btn btn-primary" href="/game/descending">Highest Price</a>
                <a class="btn btn-primary" href="/game/ascending">Lowest Price</a>
            </th>
            <th colspan="1">
                <a class="btn btn-success" href="/game/add">Add</a>
            </th>
        </tr>
        <tr class="h5">
            <th style="color: blue;">Game Name</th>
            <th style="color: blue;">Category</th>
            <th style="color: blue;">Quantity</th>
            <th style="color: blue;">Price</th>
            <th style="color: blue;">Image</th>
            <th style="color: blue;">Date</th>
            <th style="color: blue;">Action</th>
        </tr>
        {{#each games }}
        <tr>
            <td>{{ name }}</td>
            <td>{{ category }}</td>
            <td>{{ quantity }}</td>
            <td>{{ price }} ($)</td>
            <td>
                <img src="{{image}}" width="250">
            </td>
            <td>{{ date }}</td>
            <td>
                <a class="btn btn-warning" href="/game/edit/{{_id}}">Edit</a>
                <a class="btn btn-danger" href="/game/delete/{{_id}}"
                    onclick="return confirm('Are you sure you want to delete this game?');">Delete</a>
            </td>
        </tr>
        {{/each}}
    </table>
</div>